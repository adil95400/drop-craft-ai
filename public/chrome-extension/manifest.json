{
  "manifest_version": 3,
  "name": "ShopOpti+ - Dropshipping Pro",
  "version": "4.3.15",
  "description": "Extension professionnelle dropshipping - Import 1-clic avec variantes et avis, IA SEO avancée, détection winning products, 25+ plateformes - v4.3.15 ULTRA PRO",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "notifications",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "*://shopopti.io/*",
    "*://*.shopopti.io/*",
    "*://*.myshopify.com/*",
    "*://*/products/*",
    "*://*.aliexpress.com/*",
    "*://*.aliexpress.fr/*",
    "*://*.aliexpress.us/*",
    "*://*.amazon.com/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.de/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.es/*",
    "*://*.amazon.it/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.co.jp/*",
    "*://*.ebay.com/*",
    "*://*.ebay.fr/*",
    "*://*.ebay.de/*",
    "*://*.ebay.co.uk/*",
    "*://*.walmart.com/*",
    "*://*.etsy.com/*",
    "*://*.temu.com/*",
    "*://*.wish.com/*",
    "*://*.shein.com/*",
    "*://*.shein.fr/*",
    "*://*.banggood.com/*",
    "*://*.dhgate.com/*",
    "*://*.1688.com/*",
    "*://*.taobao.com/*",
    "*://*.cjdropshipping.com/*",
    "*://*.lightinthebox.com/*",
    "*://*.gearbest.com/*",
    "*://*.made-in-china.com/*",
    "*://*.cdiscount.com/*",
    "*://*.fnac.com/*",
    "*://*.rakuten.fr/*",
    "*://*.rakuten.com/*",
    "*://*.homedepot.com/*",
    "*://*.lowes.com/*",
    "*://*.costco.com/*",
    "*://*.darty.com/*",
    "*://*.boulanger.com/*",
    "*://*.manomano.fr/*",
    "*://*.leroymerlin.fr/*",
    "*://*.target.com/*",
    "*://*.bestbuy.com/*",
    "*://*.newegg.com/*",
    "*://*.overstock.com/*",
    "*://*.wayfair.com/*",
    "*://*.zalando.fr/*",
    "*://*.asos.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ShopOpti+ - Dropshipping Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js",
        "sidebar.js", 
        "sidebar.css",
        "grabber.js",
        "reviews-extractor.js",
        "video-extractor.js",
        "variants-extractor.js",
        "fulfillment.js",
        "automation.js",
        "faq.js",
        "support.js",
        "image-optimizer.js",
        "multi-store-manager.js",
        "price-monitor.js",
        "auto-order.js",
        "trend-analyzer.js",
        "bulk-selector.js",
        "review-translator.js",
        "advanced-scraper.js",
        "import-overlay.js",
        "ai-content-generator.js",
        "supplier-compare.js",
        "watermark-remover.js",
        "multi-store.js",
        "supplier-search.js",
        "ads-spy.js",
        "seo-meta-generator.js",
        "winning-product-detector.js",
        "price-optimizer.js",
        "debug-panel.js",
        "platforms/shopify-universal.js",
        "platforms/tiktok-shop.js",
        "platforms/cdiscount.js",
        "platforms/fnac.js",
        "platforms/rakuten.js",
        "platforms/home-depot.js",
        "platforms/lowes.js",
        "platforms/costco.js",
        "content.css",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.aliexpress.com/*",
        "*://*.aliexpress.fr/*",
        "*://*.aliexpress.us/*",
        "*://*.amazon.com/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.de/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.es/*",
        "*://*.amazon.it/*",
        "*://*.ebay.com/*",
        "*://*.ebay.fr/*",
        "*://*.ebay.de/*",
        "*://*.ebay.co.uk/*",
        "*://*.walmart.com/*",
        "*://*.etsy.com/*",
        "*://*.temu.com/*",
        "*://*.wish.com/*",
        "*://*.banggood.com/*",
        "*://*.dhgate.com/*",
        "*://*.1688.com/*",
        "*://*.taobao.com/*",
        "*://*.shein.com/*",
        "*://*.cjdropshipping.com/*",
        "*://*.lightinthebox.com/*",
        "*://*.gearbest.com/*",
        "*://*.made-in-china.com/*",
        "*://shop.tiktok.com/*",
        "*://*.tiktokshop.com/*",
        "*://seller.tiktok.com/*",
        "*://*.cdiscount.com/*",
        "*://*.fnac.com/*",
        "*://*.rakuten.fr/*",
        "*://*.homedepot.com/*",
        "*://*.lowes.com/*",
        "*://*.costco.com/*",
        "*://*.darty.com/*",
        "*://*.boulanger.com/*",
        "*://*.manomano.fr/*",
        "*://*.leroymerlin.fr/*",
        "*://*.myshopify.com/*",
        "*://*.target.com/*",
        "*://*.bestbuy.com/*",
        "*://*.wayfair.com/*",
        "*://*.overstock.com/*",
        "*://*.newegg.com/*",
        "*://*.zalando.fr/*",
        "*://*.asos.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*/products/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ]
}
