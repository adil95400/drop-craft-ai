{
  "manifest_version": 3,
  "name": "Shopopti+ - Dropshipping Pro",
  "version": "4.3.5",
  "description": "Extension professionnelle de dropshipping - Import 1-clic CSP-Safe, IA SEO avancée, détection winning products, comparaison fournisseurs, 25+ plateformes",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.de/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.it/*",
    "https://*.amazon.es/*",
    "https://*.aliexpress.com/*",
    "https://*.aliexpress.us/*",
    "https://*.alibaba.com/*",
    "https://*.temu.com/*",
    "https://*.shein.com/*",
    "https://*.ebay.com/*",
    "https://*.ebay.fr/*",
    "https://*.ebay.de/*",
    "https://*.ebay.co.uk/*",
    "https://*.etsy.com/*",
    "https://*.walmart.com/*",
    "https://*.cjdropshipping.com/*",
    "https://*.banggood.com/*",
    "https://*.dhgate.com/*",
    "https://*.wish.com/*",
    "https://*.cdiscount.com/*",
    "https://*.fnac.com/*",
    "https://*.myshopify.com/*",
    "https://jsmwckzrmqecwwrswwrz.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.de/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.it/*",
        "https://*.amazon.es/*",
        "https://*.aliexpress.com/*",
        "https://*.aliexpress.us/*",
        "https://*.alibaba.com/*",
        "https://*.temu.com/*",
        "https://*.shein.com/*",
        "https://*.ebay.com/*",
        "https://*.ebay.fr/*",
        "https://*.ebay.de/*",
        "https://*.ebay.co.uk/*",
        "https://*.etsy.com/*",
        "https://*.walmart.com/*",
        "https://*.cjdropshipping.com/*",
        "https://*.banggood.com/*",
        "https://*.dhgate.com/*",
        "https://*.wish.com/*",
        "https://*.cdiscount.com/*",
        "https://*.fnac.com/*",
        "https://*.myshopify.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Shopopti+ - Import Produit"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
