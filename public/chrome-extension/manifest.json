{
  "manifest_version": 3,
  "name": "Drop Craft AI | Dropshipping Pro",
  "version": "4.0.0",
  "description": "Extension Dropshipping Professionnelle - Import 1-Click, Calculateur de Profit, Suivi des Prix, Multi-Plateformes (AliExpress, Amazon, eBay, Temu...)",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "notifications",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "*://shopopti.io/*",
    "*://*.shopopti.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.aliexpress.com/*",
        "*://*.aliexpress.fr/*",
        "*://*.aliexpress.us/*",
        "*://*.amazon.com/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.de/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.es/*",
        "*://*.amazon.it/*",
        "*://*.ebay.com/*",
        "*://*.ebay.fr/*",
        "*://*.ebay.de/*",
        "*://*.ebay.co.uk/*",
        "*://*.walmart.com/*",
        "*://*.etsy.com/*",
        "*://*.temu.com/*",
        "*://*.wish.com/*",
        "*://*.banggood.com/*",
        "*://*.dhgate.com/*",
        "*://*.1688.com/*",
        "*://*.taobao.com/*",
        "*://*.shein.com/*",
        "*://*.cjdropshipping.com/*",
        "*://*.lightinthebox.com/*",
        "*://*.gearbest.com/*",
        "*://*.made-in-china.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Drop Craft AI - Dropshipping Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js",
        "sidebar.js", 
        "sidebar.css",
        "grabber.js",
        "fulfillment.js",
        "automation.js",
        "faq.js",
        "support.js",
        "image-optimizer.js",
        "content.css",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}